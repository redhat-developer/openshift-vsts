{
    "compilerOptions": {
        "composite": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "es2015"
        ]
    }
}
