{
  "name": "oc-install",
  "description": "Runs OpenShift command using oc",
  "license": "Apache-2.0",
  "repository": "github:hferentschik/openshift-vsts",
  "main": "task.js",
  "scripts": {
    "env": "env",
    "prebuild": "npm install",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "mocha ./tests/*.ts",
    "report": "tsc -p . & mocha ./tests/*.ts --reporter mocha-simple-html-reporter --reporter-options output=out/report.html",
    "clean": "rm -rf *.js *.map node_modules out"
  },
  "dependencies": {
    "argv-split": "^2.0.1",
    "fs-extra": "^7.0.0",
    "vsts-task-lib": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-simple-html-reporter": "^1.1.0"
  }
}
