{
  "name": "oc-cmd",
  "description": "Runs OpenShift command using oc",
  "license": "Apache-2.0",
  "repository": "github:hferentschik/openshift-vsts",
  "main": "lib/task.js",
  "scripts": {
    "env": "env",
    "prebuild": "npm install",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "ts-mocha -p tsconfig.json src/tests/**/L*.ts",
    "test:report": "npm run test -- --reporter mocha-simple-html-reporter --reporter-options output=out/test-report.html",
    "test:report:ci": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=out/test-report.xml",
    "clean": "rm -rf lib node_modules out",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@octokit/rest": "^15.12.1",
    "@types/q": "^1.5.1",
    "argv-split": "^2.0.1",
    "fs-extra": "^7.0.0",
    "q": "^1.5.1",
    "substituter": "^1.3.0",
    "vsts-task-lib": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.6",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-simple-html-reporter": "^1.1.0",
    "prettier": "^1.14.3",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.2"
  }
}
